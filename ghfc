import scrapy
 
class ExampleSpider(scrapy.Spider):
    name = 'example_spider'
    start_urls = ['http://example.com']
 
    def parse(self, response):
        for item in response.css('a'):
            yield {
                'title': item.css('::text').get(),
                'link': item.css('::attr(href)').get()
            }
